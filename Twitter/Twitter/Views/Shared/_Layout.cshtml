<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Twitter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Twitter.styles.css" asp-append-version="true"/>
</head>
<body>
<header style="background-color:#b3e5fc; box-shadow:0 1px 4px rgba(0,0,0,0.1); width:100%;">
    <div class="d-flex justify-content-between align-items-center py-2 px-4"
         style="max-width:1200px; margin:0 auto;">
        <div class="d-flex align-items-center">
            <h3 class="mb-0" style="font-weight:700; color:#0288d1;">
                <a class="navbar-brand" asp-area="" asp-controller="Posts" asp-action="Index" style="color: whitesmoke; font-size: xx-large;">Twitter</a>
            </h3>
        </div>
        <div class="d-flex align-items-center">
            <partial name="_LoginPartial" />
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>